<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wipe.healthy.core.dao.read.AccountReadDao">

    <sql id="account">
        id,english_name,password,login_count,login_ip,login_time,authorithy,qq,describes
    </sql>

    <select id="findById" parameterType="java.lang.Integer" resultType="com.wipe.healthy.core.model.Account">
        SELECT
        <include refid="account"/>
        FROM account
        WHERE id = #{id}
    </select>

    <select id="list" parameterType="java.util.HashMap" resultType="com.wipe.healthy.core.model.Account">
        SELECT
        <include refid="account"/>
        FROM account
    </select>

    <select id="findByName" parameterType="java.lang.String" resultType="com.wipe.healthy.core.model.Account">
        SELECT
        <include refid="account"/>
        FROM account
        WHERE english_name = #{englishName}
    </select>


    <select id="batchQuery" parameterType="java.util.HashSet" resultType="com.wipe.healthy.core.model.Account">
        SELECT
        <include refid="account"/>
        FROM account
        <where>
            id IN
            <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
    </select>
</mapper>

